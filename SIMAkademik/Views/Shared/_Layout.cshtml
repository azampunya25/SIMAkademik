                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("Index","Mahasiswa")>
                            <i class="fa fa-circle-o"></i> <span>Mahasiswa</span>
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("Index","Karyawan")>
                            <i class="fa fa-circle-o"></i> <span>Karyawan</span>
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("Index","Dosen")>
                            <i class="fa fa-circle-o"></i> <span>Dosen</span>
                        </a>
                    </li>
